<h1>All tasks for today</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= button_to "Delete", task_path(task), method: :delete, data: { 'turbo-confirm': "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path %>
